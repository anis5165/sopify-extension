{
  "manifest_version": 3,
  "name": "Document Recorder",
  "version": "1.0",
  "description": "Records your document reading and editing process.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://docs.google.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Document Recorder"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}